# Emby 基本設定
EMBY_CONFIG_DIR=/path/to/config
EMBY_MEDIA_DIR=/path/to/media

# 用戶和組設定
EMBY_UID=1000
EMBY_GID=100
EMBY_GIDLIST=100

# 網絡設定
EMBY_HTTP_PORT=8096
EMBY_HTTPS_PORT=8920

# 系統設定
TZ=Asia/Taipei

# 資源限制（可選）
# EMBY_CPU_LIMIT=2
# EMBY_MEMORY_LIMIT=4G
# EMBY_CPU_RESERVATION=1
# EMBY_MEMORY_RESERVATION=2G

# 進階設定（可選）
# EMBY_DEVICE_NAME=MyEmbyServer
# EMBY_SERVER_NAME=MyEmbyServer
# EMBY_PUBLISHED_SERVER_URL=http://your-domain.com 